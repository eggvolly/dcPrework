@model _20170328prework.ViewModels.ToolBarViewModel

<div class="col-md-4 col-md-offset-8" id="toolbar">
    <nav>
        <ul class="list-inline">
            <li style="padding:0px">
                <button class="btn btn-warning @(Model.DisSearch.HasValue ? (Model.DisSearch.Value ? "hidden" : "") : "")" onclick="ToolBtnClick('Search')" id="Search" disabled="@(Model.DisSearch ?? false)" data-url="@Url.Action("Search",Model.ControllerName)" data-display="searchpanel">查詢</button>
            </li><!--
            --><li style="padding:0px">
                   <button class="btn btn-danger @(Model.DisNew.HasValue ? Model.DisNew.Value ? "hidden" : "" : "")" onclick="ToolBtnClick('Add')" id="Add" disabled="@(Model.DisNew ?? false)" data-url="@Url.Action("Add",Model.ControllerName)" data-display="display">新增</button>
            </li><!--
            --><li style="padding:0px">
                   <a class="btn btn-default @(Model.DisCheck.HasValue ? Model.DisCheck.Value ? "hidden" : "" :"")" id=" check" disabled="@(Model.DisCheck ?? false)" href="@Url.Action("Check",Model.ControllerName)">確認</a>
            </li><!--
            --><li style="padding:0px">
                   <a class="btn btn-info @(Model.DisDelete.HasValue ? Model.DisDelete.Value ? "hidden" : "" :"")" id="Delete" disabled="@(Model.DisDelete ?? false)" href="@Url.Action("Delete",Model.ControllerName)">刪除</a>
            </li><!-- 
            --><li style="padding:0px">
                   <a class="btn btn-success @(Model.DisFailed.HasValue ? Model.DisFailed.Value ? "hidden" : "" :"")" id="Failed" disabled="@(Model.DisFailed ?? false)" href="@Url.Action("Failed",Model.ControllerName)">作廢</a>
            </li><!--            
            --><li style="padding:0px">
                   <a class="btn btn-primary @(Model.DisAttach.HasValue ? Model.DisAttach.Value ? "hidden" : "" :"")" id="Attachment" disabled="@(Model.DisAttach ?? false)" href="@Url.Action("Attachment",Model.ControllerName)">附件</a>
            </li>
        </ul>
    </nav>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4><strong>查詢</strong></h4>
            </div>
            <div class="modal-body" id="searchpanel">

            </div>
        </div>
    </div>
</div>
